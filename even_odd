public class even_odd {
    public static void checkEven_odd( int n){
        int bitmask =1;
        if((n & bitmask)==0){
            System.out.println("the number is even");
        }
        else{
            System.out.println("the number is odd");
        }

    }
    public static void main(String argss[]){
        checkEven_odd(3);
        checkEven_odd(8);
        checkEven_odd(13);
        checkEven_odd(18);

    }
    
}
